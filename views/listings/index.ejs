<% layout("/layouts/boilerplate") %>    <!-- using layout -->
<body>
    <h3>all listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->

    <!-- creating cards using bootstrap to show each place in a card -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col">
                <!-- image url used to show each image -->
                <img src="<%= listing.image.url %>"
                class="card-img-top"
                alt="listing-image"
                style="height: 20rem"
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text">
                    <b> <%= listing.title  %> </b> <br>   <!--title of image inside bold tag-->
                    &#8377;<%=  listing.price.toLocaleString ("en-IN")  %>/night    <!--price-->
        
                </p>
                </div>
            </div>
        </a>
            <% } %>
    </div>


    


