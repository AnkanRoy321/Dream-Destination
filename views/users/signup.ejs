<% layout("/layouts/boilerplate") %>    <!-- using layout -->

<div class="row mt-3">
    <h1 class="col-6 offset-3">sign up for Wanderlust</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                name="username" 
                id="username"
                type="text" 
                class="form-control"
                required
                />
                <!-- success text -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                name="email" 
                id="email"
                type="email" 
                class="form-control"
                required
                />
            </div>

            <!-- password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                name="password" 
                id="password"
                type="text" 
                class="form-control"
                required
                />
            </div>
            <button class="btn btn-success">Sign up</button>
        </form>
    </div>

</div>
